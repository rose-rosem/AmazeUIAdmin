@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "错误";
}

<div class="row-content am-cf">
    <div class="widget am-cf">
        <div class="widget-body">
            <div class="tpl-page-state">
                <div class="tpl-page-state-title am-text-center tpl-error-title text-danger">Error</div>
                <div class="tpl-error-title-info text-danger">哎呀! 处理你的请求时出错.</div>
                <div class="tpl-page-state-content tpl-error-content">

                    <p class="text-danger">我们将马上解决这个问题.同时, 你可以返回首页或尝试搜索问题.</p>
                </div>

            </div>
        </div>
    </div>
</div>