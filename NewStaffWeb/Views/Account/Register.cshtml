                            <input type="password" class="tpl-form-input" id="user-name" placeholder="请输入密码">
                        </div>

                        <div class="am-form-group">
                            <input type="password" class="tpl-form-input" id="user-name" placeholder="再次输入密码">
                        </div>

                        <div class="am-form-group tpl-login-remember-me">
                            <input id="remember-me" type="checkbox">
                            <label for="remember-me">
                                我已阅读并同意 <a href="javascript:;">《用户注册协议》</a>
                            </label>
                        </div>

                        <div class="am-form-group">
                            <button type="button" class="am-btn am-btn-primary  am-btn-block tpl-btn-bg-color-success  tpl-login-btn">提交</button>
                        </div>
                    </form>*@

                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "am-form tpl-form-line-form", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })

                    <div class="am-form-group">
                        @Html.TextBoxFor(m => m.FullName, new { @class = "tpl-form-input", id = "user-name", placeholder = "真实姓名(必填)" })
                    </div>

                    <div class="am-form-group">
                        @Html.TextBoxFor(m => m.UserName, new { @class = "tpl-form-input", id = "user-name", placeholder = "用户名(必填)" })
                    </div>

                    <div class="am-form-group">
                        @Html.TextBoxFor(m => m.Email, new { @class = "tpl-form-input", id = "user-name", placeholder = "邮箱(必填)" })
                    </div>

                    <div class="am-form-group">
                        @Html.TextBoxFor(m => m.Age, new { @class = "tpl-form-input", id = "user-name", placeholder = "年龄(必填)" })
                    </div>

                    <div class="am-form-group">
                        @Html.TextBoxFor(m => m.City, new { @class = "tpl-form-input", id = "user-name", placeholder = "家乡(选填)" })
                    </div>

                    <div class="am-form-group">
                        @Html.PasswordFor(m => m.Password, new { @class = "tpl-form-input", id = "user-name", placeholder = "密码(必填,不小于6位)" })
                    </div>

                    <div class="am-form-group">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "tpl-form-input", id = "user-name", placeholder = "确认密码(必填)" })
                    </div>

                    <div class="am-form-group">
                        <input type="submit" class="am-btn am-btn-primary  am-btn-block tpl-btn-bg-color-success  tpl-login-btn" value="提交" />
                    </div>
                }

            </div>
        </div>
    </div>
    @Scripts.Render("~/amazeui/js")

</body>

</html>






